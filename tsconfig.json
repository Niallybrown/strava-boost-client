{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "noEmit": true
  },
  "include": [
    "src",
    "config-overrides.js"
  ],
  "exclude": [
    "src/setupProxy.js",
    "src/schema/graphql.tsx",
    "src/**/*.stories.ts*",
    "src/**/*.test.ts*",
    "src/**/__tests__/*",
    "src/**/__mocks__/*",
    "src/packages/test-utils"
  ]
}
